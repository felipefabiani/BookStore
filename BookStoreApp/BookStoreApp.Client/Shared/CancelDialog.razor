<MudDialog>
    <TitleContent>
        Cancel request!
    </TitleContent>
    <DialogContent>
        Request is taking too long to process. Do you want to cancel it?
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Yes</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public Color Color { get; set; }
    [Parameter] public Action CancelRequest { get; set; } = default!;

    void Submit() 
    {
        CancelRequest?.Invoke();
        MudDialog.Close(DialogResult.Ok(true));
    }
}