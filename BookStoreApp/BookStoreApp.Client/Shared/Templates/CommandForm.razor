@inherits FormTemplateServiceBase<TService, TRequest, TResponse>
@typeparam TService where TService : IService
@typeparam TRequest where TRequest : class, new ()
@typeparam TResponse where TResponse : notnull, new ()

 
<MudForm 
    Model="@Model"
    ValidationDelay="0"
    Validation="ValidateValue"
    @ref=@form>
    <MudCard>
        <MudCardHeader>
            @HeaderTemplate
        </MudCardHeader>
        <MudCardContent>
            @FormTemplate(Model)
        </MudCardContent>
        <MudCardActions>
            <MudPaper Class="d-flex flex-row-reverse flex-grow-1 gap-4" Elevation="0">
                <MudButton id="submit" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(async () => await Submit())" accesskey="e">@(ButtonSubmitText ?? "Ok")</MudButton>
                <MudButton id="reset" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(async () => await Reset())" accesskey="k">Reset</MudButton>
                @*<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(async () => await Cancel())">Cancel</MudButton>*@
                @*<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => OpenDialog())">Cancel</MudButton>*@
                <CascadingValue Value="this">
                    @ButtonsTemplate
                </CascadingValue>
            </MudPaper>
        </MudCardActions>
    </MudCard>
</MudForm>