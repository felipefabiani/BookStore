
@using System.Security.Claims
@using Articles.Client.Authentication
@using BookStoreApp.Client.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@* @inject IAuthenticationService AuthService *@
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<AuthorizeView>
    <Authorized>
        <MudFab Color="Color.Primary" EndIcon="@Icons.Material.Outlined.Logout" OnClick="BeginSignOut" DisableElevation="true" Label="@context.User.Identity?.Name" />
    </Authorized>
    <NotAuthorized>
        <MudFab Color="Color.Primary" EndIcon="@Icons.Material.Outlined.Login" Href="login" DisableElevation="true" Label="Log In" />
    </NotAuthorized>
</AuthorizeView>

@code{
    [CascadingParameter]
    public Task<AuthenticationState> AuthState { get; set; } = null!;

    private async Task BeginSignOut(MouseEventArgs args)
    {
        // await AuthService.Logout();
        Navigation.NavigateTo("/login");
        await Task.CompletedTask;
    }
}
